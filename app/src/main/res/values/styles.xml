<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/colorTextInputText</item>
        <item name="colorControlNormal">@color/colorTextInputText</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="TextLabel" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColorHint">@color/colorTextInputText</item>
        <item name="colorControlNormal">@color/colorTextInputText</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

</resources>